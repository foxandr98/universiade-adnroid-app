<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.VenueDetailsActivity"
        android:orientation="vertical"
        android:background="@color/beige" >

    <TextView
            android:id="@+id/venue_details_stadium_name"
            android:text="Stadium name"
            android:textSize="26sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

    <TextView
            android:id="@+id/venue_details_address"
            android:text="Stadium adress"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray" />

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/venue_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray" />

</LinearLayout>