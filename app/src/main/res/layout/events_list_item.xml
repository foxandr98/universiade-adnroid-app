<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/events_discipline"
            android:text="Discipline"
            android:layout_weight="2"
            style="@style/great_small_text_style" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

        <TextView
                android:id="@+id/events_category_gender"
                android:text="Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

        <TextView
                android:id="@+id/events_category_is_individual"
                android:text="Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
    </LinearLayout>


    <TextView
            android:id="@+id/events_stage"
            android:text="Stage"
            android:layout_weight="2"
            style="@style/great_small_text_style" />

    <TextView
            android:id="@+id/events_time"
            android:text="Time"
            android:layout_weight="2"
            style="@style/great_small_text_style"
            android:textStyle="bold" />

    <ImageView
            android:id="@+id/events_is_ended"
            android:text="Ended"
            android:layout_weight="0.8"
            style="@style/great_small_text_style" />
</LinearLayout>