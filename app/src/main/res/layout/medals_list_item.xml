<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/medals_rank"
            android:text="rank"
            android:layout_weight="1"
            style="@style/great_text_style" />

    <ImageView
            android:id="@+id/medals_flag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="fill" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

        <TextView
                android:id="@+id/medals_country_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Название"
                android:layout_weight="1"
                />

        <TextView
                android:id="@+id/medals_ioc_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Столица"
                android:layout_weight="1" />
    </LinearLayout>

    <TextView
            android:id="@+id/medals_gold_count"
            android:text="gold"
            style="@style/great_text_style"
            android:layout_weight="1" />

    <TextView
            android:id="@+id/medals_silver_count"
            android:text="silver"
            style="@style/great_text_style"
            android:layout_weight="1" />

    <TextView
            android:id="@+id/medals_bronze_count"
            android:text="bronze"
            style="@style/great_text_style"
            android:layout_weight="1" />

    <TextView
            android:id="@+id/medals_total_count"
            android:text="total"
            style="@style/great_text_style"
            android:layout_weight="1" />
</LinearLayout>