<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/events_discipline"
            android:layout_height="match_parent"
            android:text="Discipline"
            android:layout_weight="3"
            style="@style/great_small_horizontal_text_style" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2">

        <TextView
                android:id="@+id/events_category_gender"
                android:text="Gender"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="5dp"/>

        <TextView
                android:id="@+id/events_category_is_individual"
                android:text="Type"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
    </LinearLayout>


    <TextView
            android:id="@+id/events_stage"
            android:text="Stage"
            android:layout_weight="2.6"
            style="@style/great_small_horizontal_text_style" />

    <TextView
            android:id="@+id/events_time"
            android:text="Time"
            android:layout_weight="2.6"
            style="@style/great_small_horizontal_text_style"
            android:textStyle="bold" />

    <ImageView
            android:id="@+id/events_is_ended"
            android:text="Ended"
            android:layout_weight="1"
            style="@style/great_small_horizontal_text_style" />
</LinearLayout>